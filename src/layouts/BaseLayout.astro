---
import "bootstrap/dist/css/bootstrap.min.css";
import "bootstrap-icons/font/bootstrap-icons.css";
import "../styles/global.css";

import Footer from "../components/Footer.astro";

import {
  contact,
} from "../data/cvData.js";

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/icons/engineer.png" type="image/png" />
    <title>Toe Arkar</title>
  </head>
  <body>
    <!-- Horizontal Navbar -->
    <nav class="navbar navbar-expand-lg" style="background-color: #626567;">
      <div class="container-fluid px-4">
        <a class="navbar-brand text-white d-flex align-items-center" href="/">
          <img src="/icons/engineer.png" alt="Logo" class="me-2" style="height: 30px;" />
            Profolio
        </a>

        <!-- Toggle Button for Mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navigation Links -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link text-white" href="/">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/services">Services</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/experiences">Experiences</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/projects">Projects</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" target="_blank" href="/cv.pdf">View CV</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <main class="container my-5">
      <slot />
      <Footer socialLinks={contact} />
    </main>

     <script>
        import "bootstrap/dist/js/bootstrap.bundle.min.js";
     </script>

    <!-- Custom Styles -->
    <style>

      main {
        min-height: calc(100vh - 56px);
      }

      .navbar-brand {
        font-size: 1.5rem;
        font-weight: bold;
      }

      /* Navigation Links Styling */
      .nav-link {
        font-size: 1.1rem;
        transition: color 0.3s ease;
      }

      .nav-link:hover {
        color: #f8f9fa;
        background-color: #505354;
        border-radius: 5px;
      }

      /* Active Link Styling */
      .nav-link.active {
        font-weight: bold;
        color: #f8f9fa;
      }

      /* Mobile Styles */
      @media (max-width: 768px) {
        .navbar-nav {
          text-align: center;
        }

        .nav-link {
          font-size: 1rem;
        }
      }
    </style>
  </body>
</html>

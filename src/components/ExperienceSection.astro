---
import SectionCard from './SectionCard.astro';
const { experiences } = Astro.props;
---
<SectionCard title="Professional Experience" icon="bi bi-briefcase-fill">
  <div class="accordion" id="experienceAccordion">
    {experiences.map((exp, index) => (
      <div class="accordion-item" key={index}>
        <h2 class="accordion-header" id={`heading${index}`}>
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target={`#collapse${index}`}
            aria-expanded="false"
            aria-controls={`collapse${index}`}
          >
            {exp.title} - {exp.company} ({exp.dateRange})
          </button>
        </h2>
        <div
          id={`collapse${index}`}
          class="accordion-collapse collapse"
          aria-labelledby={`heading${index}`}
          data-bs-parent="#experienceAccordion"
        >
          <div class="accordion-body">
            <ul class="small mb-0">
              {exp.responsibilities.map((resp) => (
                <li>{resp}</li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    ))}
  </div>
</SectionCard>
